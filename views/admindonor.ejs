<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin - Donation Requests</title>
    <link href="/styles.css" rel="stylesheet">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 32px;
        }
        th, td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: center;
        }
        th {
            background-color: #f44336;
            color: white;
        }
        .action-select {
            padding: 4px;
        }
        .submit-btn {
            background-color: #3498db;
            color: white;
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .submit-btn:hover {
            background-color: #2980b9;
        }
        .section-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-top: 2rem;
            margin-bottom: 1rem;
            color: #b71c1c;
        }
    </style>
</head>
<body class="bg-yellow-100 p-6">
    <h1 class="text-3xl font-bold text-center text-red-700 mb-6">Admin - Donation Requests</h1>

    <div>
        <h2 class="section-title">Direct Donations (No Event)</h2>
        <table id="direct-donations-table">
            <thead>
                <tr>
                    <th>Donor ID</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Blood Group</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Units Donated</th>
                    <th>Collection Date</th>
                    <th>Expiry Date</th>
                    <th>Action</th>
                    <th>Submit</th>
                </tr>
            </thead>
            <tbody>
                <% directDonations.forEach(d => { %>
                <tr data-donation-id="<%= d.DONATIONID %>">
                    <td><%= d.DONORID %></td>
                    <td><%= d.D_NAME %></td>
                    <td><%= d.D_GENDER %></td>
                    <td><%= d.D_BLOODGROUP %></td>
                    <td><%= d.D_PHONENO %></td>
                    <td><%= d.D_ADDRESS %></td>
                    <td><%= d.UNITSDONATED %></td>
                    <td><%= d.COLLECTIONDATE %></td>
                    <td><%= d.EXPIRYDATE %></td>
                    <td>
                        <select class="action-select">
                            <option value="accept">Accept</option>
                            <option value="reject">Reject</option>
                        </select>
                    </td>
                    <td><button class="submit-btn">Submit</button></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <div>
        <h2 class="section-title">Event-Based Donations</h2>
        <table id="event-donations-table">
            <thead>
                <tr>
                    <th>Donor ID</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Blood Group</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Event ID</th>
                    <th>Units Donated</th>
                    <th>Collection Date</th>
                    <th>Expiry Date</th>
                    <th>Action</th>
                    <th>Submit</th>
                </tr>
            </thead>
            <tbody>
                <% eventDonations.forEach(d => { %>
                <tr data-donation-id="<%= d.DONATIONID %>">
                    <td><%= d.DONORID %></td>
                    <td><%= d.D_NAME %></td>
                    <td><%= d.D_GENDER %></td>
                    <td><%= d.D_BLOODGROUP %></td>
                    <td><%= d.D_PHONENO %></td>
                    <td><%= d.D_ADDRESS %></td>
                    <td><%= d.EVENTID %></td>
                    <td><%= d.UNITSDONATED %></td>
                    <td><%= d.COLLECTIONDATE %></td>
                    <td><%= d.EXPIRYDATE %></td>
                    <td>
                        <select class="action-select">
                            <option value="accept">Accept</option>
                            <option value="reject">Reject</option>
                        </select>
                    </td>
                    <td><button class="submit-btn">Submit</button></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <script>
        document.querySelectorAll('.submit-btn').forEach(button => {
            button.addEventListener('click', function () {
                const row = button.closest('tr');
                const donationId = row.dataset.donationId;
                const action = row.querySelector('.action-select').value;

                fetch('/admin/review-donation', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        donationId: donationId,
                        action: action
                    })
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        alert(`Donation ${action}ed successfully!`);
                        row.remove(); // Remove the row from the table
                    } else {
                        alert(`Error: ${data.message}`);
                    }
                })
                .catch(err => {
                    console.error('Error submitting review:', err);
                    alert('Something went wrong.');
                });
            });
        });
    </script>
</body>
</html>
