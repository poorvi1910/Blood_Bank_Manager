<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/styles.css" rel="stylesheet">
</head>
<body class="flex items-center justify-center min-h-screen bg-purple-300">

  <div class="w-full max-w-sm bg-white p-6 rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold text-center mb-4 text-purple-700">Login</h2>

    <form action="/login" method="POST" class="space-y-4">
      <div>
        <input type="text" id="username" name="username" placeholder="Username" required
          class="w-full p-2 border rounded-lg focus:ring focus:ring-purple-300">
      </div>

      <div>
        <input type="password" id="password" name="password" placeholder="Password" required
          class="w-full p-2 border rounded-lg focus:ring focus:ring-purple-300">
      </div>

      <button type="submit" class="w-full bg-purple-500 text-white py-2 rounded-lg hover:bg-purple-600">
        Login
      </button>
    </form>

    <p class="text-sm text-gray-600 mt-4 text-center">
      Don't have an account? <a href="/register" class="text-purple-500 font-bold">Sign Up</a>
    </p>
  </div>

</body>
</html>
